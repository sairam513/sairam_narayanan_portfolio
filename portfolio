<script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script><script>
  // Matrix Rain ‚Äî Kali blue
  const canvas = document.getElementById('matrix-canvas');
  const ctx = canvas.getContext('2d');
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
  const cols = Math.floor(canvas.width / 16);
  const drops = Array(cols).fill(1);
  const chars = '01„Ç¢„Ç§„Ç¶„Ç®„Ç™„Ç´„Ç≠„ÇØ„Ç±„Ç≥„Çµ„Ç∑„Çπ„Çª„ÇΩ„Çø„ÉÅ„ÉÑ„ÉÜ„Éà„Éä„Éã„Éå„Éç„Éé';
  function drawMatrix() {
    ctx.fillStyle = 'rgba(13,17,23,0.05)';
    ctx.fillRect(0, 0, canvas.width, canvas.height);
    ctx.fillStyle = '#1793d1';
    ctx.font = '14px Share Tech Mono';
    drops.forEach((y, i) => {
      const char = chars[Math.floor(Math.random() * chars.length)];
      ctx.fillText(char, i * 16, y * 16);
      if (y * 16 > canvas.height && Math.random() > 0.975) drops[i] = 0;
      drops[i]++;
    });
  }
  setInterval(drawMatrix, 60);
  window.addEventListener('resize', () => { canvas.width = window.innerWidth; canvas.height = window.innerHeight; });

  // Clock
  function updateTime() {
    document.getElementById('statusTime').textContent = new Date().toLocaleTimeString('en-US', { hour12: false }) + ' CST';
  }
  updateTime();
  setInterval(updateTime, 1000);

  // Hex Network Canvas (photo background)
  const hc = document.getElementById('hexCanvas');
  if (hc) {
    const hctx = hc.getContext('2d');
    const wrap = hc.parentElement;
    function resizeHex() { hc.width = wrap.offsetWidth; hc.height = wrap.offsetHeight; }
    resizeHex();
    window.addEventListener('resize', resizeHex);

    const hexSize = 26;
    const nodes = [];
    function buildNodes() {
      nodes.length = 0;
      const cols2 = Math.ceil(hc.width  / (hexSize * 1.75)) + 2;
      const rows2 = Math.ceil(hc.height / (hexSize * 1.5))  + 2;
      for (let r = 0; r < rows2; r++) {
        for (let c = 0; c < cols2; c++) {
          const x = c * hexSize * 1.75 + (r % 2 === 0 ? 0 : hexSize * 0.875);
          const y = r * hexSize * 1.5;
          nodes.push({ x, y, pulse: Math.random() * Math.PI * 2, speed: 0.01 + Math.random() * 0.02 });
        }
      }
    }
    buildNodes();
    window.addEventListener('resize', buildNodes);

    function hexPath(cx, cy, size) {
      hctx.beginPath();
      for (let i = 0; i < 6; i++) {
        const angle = (Math.PI / 180) * (60 * i - 30);
        const px = cx + size * Math.cos(angle);
        const py = cy + size * Math.sin(angle);
        i === 0 ? hctx.moveTo(px, py) : hctx.lineTo(px, py);
      }
      hctx.closePath();
    }

    function drawHexNet() {
      hctx.clearRect(0, 0, hc.width, hc.height);
      nodes.forEach(n => {
        n.pulse += n.speed;
        const alpha = 0.07 + Math.sin(n.pulse) * 0.06;
        hexPath(n.x, n.y, hexSize - 2);
        hctx.strokeStyle = `rgba(23,147,209,${alpha})`;
        hctx.lineWidth = 0.7;
        hctx.stroke();
        const dotAlpha = 0.18 + Math.sin(n.pulse) * 0.12;
        hctx.beginPath();
        hctx.arc(n.x, n.y, 1.8, 0, Math.PI * 2);
        hctx.fillStyle = `rgba(42,183,245,${dotAlpha})`;
        hctx.fill();
      });
      for (let i = 0; i < nodes.length; i++) {
        for (let j = i + 1; j < nodes.length; j++) {
          const dx = nodes[i].x - nodes[j].x;
          const dy = nodes[i].y - nodes[j].y;
          const dist = Math.sqrt(dx*dx + dy*dy);
          if (dist < hexSize * 2.1) {
            const alpha = (1 - dist / (hexSize * 2.1)) * 0.1;
            hctx.beginPath();
            hctx.moveTo(nodes[i].x, nodes[i].y);
            hctx.lineTo(nodes[j].x, nodes[j].y);
            hctx.strokeStyle = `rgba(23,147,209,${alpha})`;
            hctx.lineWidth = 0.5;
            hctx.stroke();
          }
        }
      }
      requestAnimationFrame(drawHexNet);
    }
    drawHexNet();
  }
</script>
</body>
